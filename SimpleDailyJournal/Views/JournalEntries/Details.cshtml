@model SimpleDailyJournal.Models.JournalEntry

<h2>Journal Entry Details</h2>

<div class="mb-3">
    <strong>Date:</strong> @Model.Date.ToShortDateString()
</div>
<div class="mb-3">
    <strong>Content:</strong>
    <p>@Model.Content</p>
</div>
<div class="mb-3">
    <strong>Mood:</strong> @Model.Mood
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>