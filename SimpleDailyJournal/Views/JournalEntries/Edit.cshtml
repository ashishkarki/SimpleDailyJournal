@model SimpleDailyJournal.Models.JournalEntry

<h2>Edit Journal Entry</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Date" class="control-label">Date (read-only)</label>
        <input asp-for="Date" class="form-control" readonly="readonly"/>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Mood" class="control-label"></label>
        <select asp-for="Mood" class="form-control" asp-items="Html.GetEnumSelectList<MoodType>()"></select>
        <span asp-validation-for="Mood" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>