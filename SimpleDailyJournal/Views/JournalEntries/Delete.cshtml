@model SimpleDailyJournal.Models.JournalEntry

<h2>Delete Journal Entry</h2>

<div>
    <h4>Are you sure you want to delete this journal entry?</h4>
    <dl class="row">
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>

        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Mood</dt>
        <dd class="col-sm-10">@Model.Mood</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>